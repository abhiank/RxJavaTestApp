<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/repo_owner_edittext"
            android:layout_width="150dp"
            android:gravity="center"
            android:text="googlesamples"
            android:layout_height="wrap_content"
            android:hint="Repo Owner" />

        <TextView
            android:id="@+id/slash_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="/"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/repo_name_edittext"
            android:layout_width="150dp"
            android:gravity="center"
            android:text="android-architecture"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/slash_textview"
            android:hint="Repo Owner" />

    </LinearLayout>

    <Button
        android:id="@+id/show_pull_req_button"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Show Pull Requests"
        android:textAllCaps="false" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_marginTop="50dp"/>

</LinearLayout>
